%h1 Sign up
%br
= form_for @user, url: { action: 'create' } do |f|
  First Name:
  = f.text_field :first_name
  %br
  Last Name:
  = f.text_field :last_name
  %br
  Email:
  = f.email_field :email
  %br
  Password:
  = f.password_field :password
  %br
  Conform Password:
  = f.password_field :password_confirmation
  %br
  = f.submit
