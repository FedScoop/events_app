%h1 Edit #{@venue.name}
%br
= form_for @venue do |f|
  %b Name:
  = f.text_field :name
  %br
  %b Street Address:
  = f.text_field :street, style: "width: 300px;"
  %br
  %b City:
  = f.text_field :city, style: "width: 300px;"
  %br
  %b State:
  = f.select :state, us_states, selected: @venue.state
  %br
  = f.submit "Save", onclick: "return confirm('Are you sure you want to make these changes to #{@venue.name}?')"
