= render "shared/header"
#content-wrap
  = render "shared/sidebar", collection: @next_event
  #content
    %h1 PAST SPEAKERS
    %ul.post-meta
    .entry
      %ul
        %li#text-6.widget.widget_text
          .textwidget
            %table{:border => "0", :cellpadding => "0", :cellspacing => "0", :style => "font-size: 13px; background-color: #ffffff;", :width => "600"}
              %tbody
                - @speakers.each_slice(4) do |slice|
                  %tr{:style => "background-color: #ffffff;"}
                    - slice.each do |speaker|
                      %td{:valign => "top", :width => "151"}
                        %a{:href => "http://fedscoop.com/fedtalks/about/speakers/#{speaker.name.downcase.gsub(" ", "-")}/"}
                          %img.size-full.wp-image-2195{:alt => "#{speaker.name}", :border => "0", :height => "150", :src => "#{speaker.photo.url(:medium)}", :title => "#{speaker.name}", :width => "150"}/
                  %tr{:style => "background-color: #ffffff;"}
                    - slice.each do |speaker|
                      %td{:valign => "top", :width => "151"}
                        %a{:href => "http://fedscoop.com/fedtalks/about/speakers/#{speaker.name.downcase.gsub(" ", "-")}/"}
                          = speaker.name
                        %br
                        = speaker.job_title
                        %br
                        = speaker.employer
  = render "shared/footer"
